<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oryossipof.securitymanagement.PorterageActivity"
android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/bg1"


    >


<ImageView
    android:id="@+id/logoporterage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/porteragelogo"
    android:layout_centerHorizontal="true"
    />


<LinearLayout
    android:layout_marginTop="30dp"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/monthLayout"
    android:layout_below="@+id/logoporterage"

    >


        <Spinner
            android:layout_weight="30"
            android:id="@+id/monthCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"


    >


        </Spinner>

        <TextView
            android:layout_weight="20"
            android:id="@+id/monthTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Month: ">


        </TextView>



</LinearLayout>


        <LinearLayout
            android:id="@+id/yearlayout"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthLayout"

            >

                <Spinner
                    android:id="@+id/yearCombo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:textDirection="ltr">


                </Spinner>


                <TextView
                    android:layout_weight="20"
                    android:id="@+id/yearTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year: "


                    >


                </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/totalPorterageLayout"
            android:weightSum="100"
            android:layout_marginTop="78dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/yearlayout"
            android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/totalPorterageTxt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbackground"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textSize="20dp"

                    />


                <TextView


                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20dp"
                    android:text="Total Porterage: $"
                    android:textStyle="bold"
                    />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/totalPorterageLayout"

            >


                <Button
                    android:id="@+id/exitBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit"

                    />


                <Button
                    android:id="@+id/okBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"

                    />

                <Button
                    android:id="@+id/gotsomeBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Got Some"

                    />




        </LinearLayout>


</RelativeLayout>
